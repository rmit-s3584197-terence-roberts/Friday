<%= stylesheet_link_tag "login" %>

<div class="container">
<div class="col-lg-3 col-lg-6 col-lg-3">
  <div class="form-signin">
  <h2 class="form-signin-heading">Please sign in</h2>
	<%= form_tag(:controller => 'main', :action => 'attempt_login') do %>
      <%= label_tag(:username, nil, :class => 'hidden') %>
  	  <%= text_field_tag(:username, nil, :class => 'form-control', :placeholder => 'Username') %>
  	  <%= label_tag(:password, nil, :class => 'hidden') %>
  	  <%= password_field_tag(:password, nil, :class => 'form-control', :placeholder => 'Password') %><br />
  	  <%= submit_tag("Login", class: "btn btn-lg btn-primary btn-block")%>
	<% end %>
  </div>
</div>
</div>