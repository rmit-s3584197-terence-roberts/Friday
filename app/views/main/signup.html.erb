<%= stylesheet_link_tag "login" %>
<%= stylesheet_link_tag "user_details" %>   

<%= bootstrap_form_for @user, url: { :controller => "user", :action => "create" } do |f| %>

<div class="container">
  <div class="col-lg-3 col-lg-6 col-lg-3">

      <div class="form-group">
        <div class="col-xs-4 ">
          <%= f.text_field :username, class:'form-control', placeholder:'Username' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4 ">
          <%= f.text_field :first_name, class:'form-control', placeholder:'First name' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :last_name, class:'form-control', placeholder:'Last name' %>
          <br />
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :email, class:'form-control', placeholder:'someone@somewhere.com' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.password_field :password, class:'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.password_field :password_confirmation, class:'form-control' %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :address, class:'form-control', placeholder:'1 Infinity Loop' %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :city, class:'form-control', placeholder:'Cupertino' %>
        </div>
      </div>


      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :country, class:'form-control', placeholder:'United States of America' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.text_field :phone, class:'form-control', placeholder:'+61 412 713 315' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-4">
          <%= f.file_field :userpic, class:'form-control' %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-xs-2 col-xs-offset-6 right">
          <br />
          <%= f.submit 'Submit', class:'btn btn-success' %>
        </div>
      </div>

    </div>

  </div>
</div>

<% end %>