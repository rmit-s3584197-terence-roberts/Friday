<%= stylesheet_link_tag "login" %>
<%= stylesheet_link_tag "user_details" %>

<div class="container">
<div class="col-lg-3 col-lg-6 col-lg-3">
  <div class="form-signin">
  <h2 class="form-signin-heading">Edit your profile</h2>

  <%= form_tag(:action => 'update') do -%>
    <%= hidden_field_tag 'user[:user_id]', @user.id %>
    <%= hidden_field_tag 'user[:password]', @user.password %>
    <%= hidden_field_tag 'user[:password_confirmation]', @user.password %>

<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-0 toppad" >
			<div class="panel panel-info">
				<div class="panel-heading">
					<span class="pull-right">
						<%= link_to("Delete Profile", {:action => 'delete', :id => @user.id}, :class => "btn btn-danger btn-xs") %>
					</span>
					<h3 class="panel-title"><%= @user.username.capitalize() + " " + @user.last_name.capitalize() %></h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-3 col-lg-3 " align="center">
						  <%=image_tag(@user.userpic.url, class: "img-circle img-responsive") if @user.userpic?%>
						</div>
						<div class=" col-md-9 col-lg-9 "> 
							<table class="table table-user-information">
								<tbody>
									<tr>
										<th>First Name:</th>
										<td><%= text_field_tag('user[:first_name]', nil, :class => 'form-control', :placeholder => 'First name') %></td>
									</tr>
									<tr>
										<th>Last Name: </th>
										<td><%= text_field_tag('user[:last_name]', nil, :class => 'form-control', :placeholder => 'Last name') %></td>
									</tr>
									<tr>
										<th>Email: </th>
										<td><%= text_field_tag('user[:email]', nil, :class => 'form-control', :placeholder => 'Email address') %></td>
									</tr>
									<tr>
										<th>Address: </th>
										<td><%= text_field_tag('user[:address]', nil, :class => 'form-control', :placeholder => 'Street Address') %></td>
									</tr>
									<tr>
										<th>City: </th>
										<td><%= text_field_tag('user[:city]', nil, :class => 'form-control', :placeholder => 'City') %></td>
									</tr>
									<tr>
										<th>Country: </th>
										<td><%= text_field_tag('user[:country]', nil, :class => 'form-control', :placeholder => 'Country') %></td>
									</tr>


									<tr>
										<th>Phone: </th>
										<td><%= telephone_field_tag('user[:phone]', nil, :class => 'form-control', :placeholder => 'Phone') %></td>
									</tr>
									<tr>
										<th>Profile picture: </th>
										<td><%= file_field_tag('user[:userpic]', :class => 'form-control') %></td>
									</tr>

								</tbody>
							</table>

						</div>
					</div>
				</div>
				<div class="panel-footer">
				<div align="center">
			  		  <%= submit_tag("Edit", :class => "btn btn-primary", :user => @user) %>
			  		  </div>
			  		  <% end %>
			  	  </div>				
				</div>

			</div>
		</div>
	</div>
</div>

</div>

