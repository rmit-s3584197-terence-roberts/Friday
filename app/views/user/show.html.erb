<div class="users show">
	<h2>My details</h2>

	<table summary="user detail view">
	<tr>
		<th>Username: </th>
		<td><%= @user.username %></td>
	</tr>
	<tr>
		<th>First Name:</th>
		<td><%= @user.first_name %></td>
	</tr>
	<tr>
		<th>Last Name: </th>
		<td><%= @user.last_name %></td>
	</tr>
	<tr>
		<th>Email: </th>
		<td><%= @user.email %></td>
	</tr>
	<tr>
		<th>Address: </th>
		<td><%= @user.address.titleize() +", " + @user.city.capitalize() + ", " + @user.country.capitalize() %></td>
	</tr>
	<tr>
		<th>Phone: </th>
		<td><%= @user.phone %></td>
	</tr>
	<tr>
		<th>Points: </th>
		<td><%= @user.points %></td>
	</tr>
	<tr>
		<th>Rating: </th>
		<td><%= @user.rating %></td>
	</tr>
	</table>

	<br />
	<%= link_to("Edit", {:action => 'edit', :id => @user.id}) %>
	<br />
	<%= link_to("Add Property", {:controller => 'properties', :action => 'new', :user_id => @user.id}) %>
	<br />
	<%= link_to("Show all Properties you have", {:controller => 'properties', :action => 'index', :user_id => @user.id}) %>
	<br />
	<%= link_to("Reservations", {:controller => 'reservation', :action => 'index', :user_id => @user.id}) %>
</div>
